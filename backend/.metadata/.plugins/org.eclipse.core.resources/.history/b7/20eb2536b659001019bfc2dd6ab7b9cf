package com.elibrary.borrowingservice.dto;

import com.elibrary.borrowingservice.entity.Borrow;
import lombok.AllArgsConstructor;
import lombok.Data;
import lombok.NoArgsConstructor;

import java.time.Instant;

@Data
@NoArgsConstructor
@AllArgsConstructor
public class BorrowResponse {
    private Long id;
    private Long userId;
    private Long bookId;
    private Instant borrowDate;
    private Instant returnDate;
    private Instant dueDate;
    private Borrow.BorrowStatus status;

    // Optionally, add fields for book title/author and user email/name from other services
    private String bookTitle; // To be populated via Feign Client
    private String bookAuthor; // To be populated via Feign Client
    private String userEmail;  // To be populated via Feign Client
    private String userName; 
    private String bookFilePath;// To be populated via Feign Client
}