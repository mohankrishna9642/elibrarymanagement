server.port=8761 # Default Eureka Server port

eureka.client.register-with-eureka=false # This is the Eureka server, it doesn't register with itself
eureka.client.fetch-registry=false       # This is the Eureka server, it doesn't need to fetch registry
eureka.instance.hostname=localhost
eureka.client.service-url.defaultZone=http://${eureka.instance.hostname}:${server.port}/eureka/

# Enable Actuator endpoints for monitoring
management.endpoints.web.exposure.include=*

logging.level.com.elibrary.eurekaserver=DEBUGspring.application.name=eurekaserver
